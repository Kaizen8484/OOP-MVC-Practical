@model List<OOP_MVC_Practical.Models.Domain.Employee>

@{
}

<h1>Employee's Data List</h1>

@if (TempData["Correct_Message"] != null)
{
    <div class="mt-3 mb-3">
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Correct_Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

<table class="table employee_table">
    <thead class="thead-dark employee_thead">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td><a class="employee_view_btn" href="/Employee/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>